  body
    .flexwrapper 
      header
        //- NAVBAR
        nav.navbar.navbar-expand-lg.navbar-light.bg-white.border-bottom
          .container.py-2
            a.navbar-brand(href='/') 
              h4.m-0 Developer Portfolio Club
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
              span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
              ul.navbar-nav.me-auto.mb-2.mb-lg-0
                if currentUser 
              ul.navbar-nav.ms-auto.mb-2.mb-lg-0
                if currentUser 
                  li.nav-item
                    a.nav-link(href=`/${currentUser.slug}`) My Portfolio
                  li.nav-item
                    a.btn.btn-light(href='/me/edit') Edit Portfolio
                  li.nav-item.dropdown
                    a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                      | 
                    ul.dropdown-menu.dropdown-menu-end(aria-labelledby='navbarDropdown')
                      //- li
                      //-   hr.dropdown-divider
                      li
                        a.dropdown-item(href='/logout') Logout

                else 
                  li.nav-item
                    //- a.text-dark.no-underline(href='/pricing') Pricing 
                    a.btn(href="/login") Login
                  li.nav-item 
                    a.btn.btn-primary(href="/contact") Contact
                  li.nav-item
                    a.btn.btn-primary(href="/join") Join

        if sessionFlash && sessionFlash.message
          #flash.position-fixed.top-5.text-center.w-100(style='z-index: 5')
            .alert.p-3(role='alert' aria-live='assertive' aria-atomic='true' class='alert-' + sessionFlash.type)= sessionFlash.message
      main
        block content
        
      footer 
